<%- include('_header') -%>

<div class="container">
  <div class="row mt-2">
    <div class="col-md-4">
      <form action="/editTask/<%=id%>" method="POST">
        <label for="task" class="form-label">Tarea</label>
        <input
          type="text"
          id="task"
          name="task"
          value="<%= response.task%>"
          class="form-control"
        />
        <label for="description" class="form-label">Tarea</label>
        <textarea
          class="form-control"
          name="description"
          id="description"
          rows="5"
          placeholder="<%=response.description%>"
        ></textarea>
        <br />
        <input type="submit" value="Actualizar" class="btn btn-primary btn-sm" />
      </form>
    </div>
  </div>
</div>

<%- include('_footer') -%>
